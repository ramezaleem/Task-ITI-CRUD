@model User

<div class="container mt-4">
    <h1 class="mb-4">Create User</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="name" class="form-label">Name</label>
            <input id="name" name="Name" class="form-control" value="@Model?.Name" required />
        </div>

        <div class="form-group">
            <label for="age" class="form-label">Age</label>
            <input id="age" name="Age" class="form-control" type="number" value="@Model?.Age" required />
        </div>

        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input id="email" name="Email" class="form-control" type="email" value="@Model?.Email" required />
        </div>

        <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input id="password" name="Password" class="form-control" type="password" value="@Model?.Password" required />
        </div>

        <div class="form-group mt-3 d-flex">
            <button type="submit" class="btn btn-primary me-2">Create</button>
            <a href="/user/index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
