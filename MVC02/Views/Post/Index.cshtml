@model IEnumerable<Post>

@{
    ViewData["Title"] = "Posts Index";
}

<div class="container mt-4">
    <h1 class="mb-4">Posts</h1>

    <a class="btn btn-primary mb-3" asp-action="Create">Create New Post</a>

    <div class="alert alert-info" role="alert">
        @TempData["Message"]
    </div>

    <table class="table table-hover table-striped">
        <thead class="table-warning">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Likes</th>
                <th scope="col">Share</th>
                <th scope="col">User</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int x = 1;
                foreach (var post in Model)
                {
                    <tr>
                        <th scope="row">@(x++)</th>
                        <td>@post.Title</td>
                        <td>@post.Category</td>
                        <td>@post.Likes</td>
                        <td>@post.Share</td>
                        <td>@post.User?.Name</td>
                        <td class="text-center">
                            <a class="btn btn-info btn-sm" href="/Post/Details/@post.Id">Details</a>
                            <a class="btn btn-warning btn-sm mx-1" href="/Post/Edit/@post.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/Post/Delete/@post.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No posts available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
